{
  "name": "bot-wechat",
  "version": "1.2.1",
  "description": "基于wechaty的微信自动给女朋友/男朋友定时发送动态消息，包含每日一句，情话，天气播报，纪念日倒计时等功能",
  "superagent": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "puppet-install": "node node_modules/.bin/wechaty-puppet-install",
    "pm2": "pm2 start pm2.config.js",
    "drun": "pm2-runtime start pm2.config.js"
  },
  "keywords": [
    "自动微信问候语",
    "天气播报",
    "每日一句",
    "定时任务"
  ],
  "author": "yorkezhong",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "log4js": "^6.6.1",
    "node-machine-id": "^1.1.12",
    "node-schedule": "^1.3.2",
    "qrcode-terminal": "^0.12.0",
    "superagent": "^4.1.0",
    "wechaty": "^1.20.2",
    "wechaty-puppet-wechat": "^1.18.4",
    "pm2": "^5.1.1"
  }
}
